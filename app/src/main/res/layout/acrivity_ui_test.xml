<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    xmlns:easemob="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.trilink.androidlib.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        easemob:titleBarLeftImage="@drawable/ease_mm_title_back"
        easemob:titleBarTitle="libTest"
        easemob:titleBarBackground="#000000"
        easemob:titleBarRightImage="@drawable/ease_mm_title_back">

    </com.trilink.androidlib.widget.EaseTitleBar>

    <RadioGroup
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textColor="@color/white"
            android:text="Apple"
            android:layout_weight="1"
            style="@style/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:textColor="@color/white"
            android:text="watermelon"
            android:layout_weight="1"
            style="@style/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textColor="@color/white"
            android:text="jjj"
            android:layout_weight="1"
            style="@style/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <LinearLayout
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:textColor="@color/white"

            android:layout_weight="1"
            style="@style/check_box_more"
            android:text="sss"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <CheckBox
            android:textColor="@color/white"
            android:layout_weight="1"
            style="@style/check_box_more"
            android:text="hhh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <ToggleButton
        android:id="@+id/tb_ll_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:button="@drawable/toggle_btn"
        android:checked="false"
        android:gravity="center_vertical"
        android:text=""
        android:textOff=""
        android:textOn="" />

    <com.trilink.androidlib.widget.EaseSwitchButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_button2">

    </com.trilink.androidlib.widget.EaseSwitchButton>
</LinearLayout>